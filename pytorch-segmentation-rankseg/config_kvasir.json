{
    "name": "FCN8",
    "n_gpu": 1,
    "use_synch_bn": false,
    "predict": {
        "temperature": 1.0,
        "CoI": [1],
        "train": "T",
        "val": "T",
        "test": "T",
        "threshold": 0.5
    }, 

    "arch": {
        "type": "FCN8",
        "args": {
            "backbone": "resnet101",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "kvasirSEG",
        "args":{
            "data_dir": "data/Kvasir-SEG",
            "batch_size": 8,
            "crop_size": 320,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "kvasirSEG",
        "args":{
            "data_dir": "data/Kvasir-SEG",
            "batch_size": 8,
            "crop_size": 320,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "test_loader": {
        "type": "kvasirSEG",
        "args":{
            "data_dir": "data/Kvasir-SEG",
            "batch_size": 8,
            "crop_size": 320,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 150,
        "save_dir": "saved/kvasirSEG/",
        "save_period": 10,
  
        "monitor": "off",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs/",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 10
    },

    "tester": {
        "tensorboard": true,
        "out_dir": "test/runs/"
    }
}
